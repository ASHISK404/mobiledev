/* pages/detail/detail.wxss */

.image {
  margin-left: 20%;     
  width: 60%;
  height: 100%;
}

.money {
  display: flex;
  padding: 30rpx 20rpx 0 20rpx;
  background: #fff;
}
.abstract{
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 10px;
  color:#808080;
  background: #fff;
   display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.title {
  padding: 20rpx 20rpx 0 20rpx;
  background: #fff;
  font-size: 16px;
}

.lists{
  box-sizing: border-box;
}

.bottom{
	width: 100%;
	height: 90rpx;
  	position: fixed;
	bottom: 0;
	display: block;
}
.bottom-buy{
	width: 100%;
	height: 90rpx;
	display: flex;
	justify-content: center;
	flex-direction: row;
	align-items: center;
  font-size: 32rpx;
  background-color: #FFF;
  color: #A6A6A6;
}
.bottom-left{
	width: 100%;
	height: 90rpx;
	display: flex;
	justify-content: left;
	flex-direction: row;
	align-items: center;
  font-size: 32rpx;
  background-color: #FFF;
  color: #A6A6A6;
}

.bottom-buy .button{
	width: 20%;
	height: 100%;
  color:#FFF;
}
.bottom-buy .button1{
	width: 30%;
	height: 100%;
  color:#FFF;
}
